{ Simple TBOL example program }
PROGRAM simple;

DEFINE ANSWER, 42;

PROC main =
  { Set up initial values }
  MOVE ANSWER, I1;
  MOVE 'Hello, TBOL!', &1;

  { Simple arithmetic }
  ADD 8, I1;

  { Conditional logic }
  IF I1 = 50 THEN MOVE 'fifty', &2;

  { String operations }
  LENGTH &1, I2;
  UPPERCASE &1, &3;
END_PROC
